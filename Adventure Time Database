/* Create table about Adventure Time characters*/
CREATE TABLE Adventure_Time 
(id INTEGER PRIMARY KEY,
name TEXT,
species TEXT,
gender TEXT,
occupation TEXT,
voiced_by TEXT,
friend_id INTEGER);

