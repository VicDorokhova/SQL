SELECT Adventure_Time.name, Age.biological_age, Age.actual_age 
FROM Adventure_time 
JOIN Age
ON Adventure_Time.id= Age.character_id;

SELECT Adventure_Time.name, Age.biological_age, Age.actual_age 
FROM Adventure_time 
LEFT OUTER JOIN Age
ON Adventure_Time.id= Age.character_id;

SELECT Adventure_Time.name, friend.name 
FROM Adventure_Time
JOIN Adventure_Time friend
ON Adventure_Time.friend_id= friend.id;

